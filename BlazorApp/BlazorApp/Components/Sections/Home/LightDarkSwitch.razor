<section id="light-dark" class="light-dark">
    <div class="container">
        <div class="content">

            <h3>Switch Between <span>Light & Dark Mode</span></h3>

            <div class="divider">
            </div>

            <div class="image">
                <img src=@LightDarkModel.Image!.ImageUrl alt="@LightDarkModel.Image.AltText" />
            </div>

            <div class="slider">
                <i class="fa-regular fa-arrows-left-right"></i>
            </div>

        </div>
    </div>
</section>

@code {
    private LightDarkSwitchModel LightDarkModel = new LightDarkSwitchModel
        {
            Id = "lightDark",
            LightTitle = "Switch Between",
            DarkTitle = "Light & Dark Mode",
            Image = new ImageModel
            { 
                ImageUrl = "./images/home/switch-screen/mockup.svg",
                AltText = "Laptop image"
            }
    };
}
